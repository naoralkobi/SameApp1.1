@model SameApp.Models.User

@{
    ViewData["Title"] = "Create";
}



<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


        <form asp-action="Create" class="form register_container" id="createAccount">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <h1 class="form__title">Create Account</h1>
             <div class="form__message form__message--error"></div>
             <div class="form__input-group">
                 
                    <div class="form__input-group"> 
                         <input asp-for="UserName" type="text" id="signupUsername" class="form__input" autofocus placeholder="Username">
                         <div class="form__input-error-message"></div>
                    </div>

                    <div class="form__input-group">
                       
                         <input asp-for="Password" type="password" id="Password_register" class="form__input" autofocus placeholder="Password">
                           <div class="form__input-error-message"></div>
                    </div>

                 <div class="form__input-group">
                     <input type="password" id="password_confirm" name="passwordConfirm" class="form__input" autofocus placeholder="Confirm password">
                     <div class="form__input-error-message"></div>
                 </div>
                 
                 
                    <button class="form__button" type="submit">Register</button>
                    </div>

                    <p class="form__text">
                         Already registered?
                    <br>
                        <a class="form__text" id="linkLogin" asp-area="" asp-controller="User" asp-action="Login">Click here</a>
                    </p>

        @if (ViewBag.Error != null)
{
    <div class="text-danger">@ViewBag.Error</div>
}
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
