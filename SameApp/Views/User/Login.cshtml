@model SameApp.Models.User

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<!--Login screen-->
<form asp-controller="User" asp-action="Login" class="form register_container" id="login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <i id="title">
        SAME
        <svg xmlns="http://www.w3.org/2000/svg" width="27" height="27" fill="currentColor" class="bi bi-chat"
             viewBox="0 0 16 16">
            <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
        </svg>
    </i>
    <h3>Different locations, different positions.</h3>
    <h3>Same company, SAME chat.</h3>
    <div class="form__message form__message--error"></div>
    <div class="form__input-group">

        <div class="form__input-group">
            <input asp-for="UserName" type="text" id="Username" class="form__input" autofocus placeholder="Username" 
                   required="required">
            <div class="form__input-error-message"></div>
        </div>

        <div class="form__input-group">
            <input asp-for="Password" type="password" id="Password" class="form__input" autofocus placeholder="Password"
                   required="required">
            <div class="form__input-error-message"></div>
        </div>

        <button class="form__button" type="submit">Login</button>

    </div>

    <p class="form__text">
        Not registered?
        <br>
        <a class="form__text" id="linkCreateAccount" asp-area="" asp-controller="User" asp-action="Create">Click here</a>
    </p>

    @if (ViewBag.Error != null)
{
    <div class="text-danger">@ViewBag.Error</div>
}
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}